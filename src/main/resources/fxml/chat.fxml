   </HBox>
   <BorderPane opacity="0.5" prefHeight="9.0" prefWidth="662.0" style="-fx-background-color: grey" />
    <HBox prefHeight="25.0" prefWidth="662.0">
      <BorderPane opacity="0.5" prefHeight="25.0" prefWidth="10.0" style="-fx-background-color: grey" />
        <TextField fx:id="txtInput" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnSend" onAction="#onSendMessage" prefHeight="26.0" prefWidth="80.0" text="Send" />
      <BorderPane opacity="0.5" prefHeight="25.0" prefWidth="10.0" style="-fx-background-color: grey" />
