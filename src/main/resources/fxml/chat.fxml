<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="240" prefWidth="300" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.ChatController">
    <TextArea fx:id="txtaChat" editable="false" prefHeight="200.0" prefWidth="300.0" wrapText="true" />
    <HBox prefHeight="40.0" prefWidth="300.0">
        <TextField fx:id="txtInput" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnSend" onAction="#onSendMessage" prefHeight="26.0" prefWidth="80.0" text="Send" />
    </HBox>
</VBox>
