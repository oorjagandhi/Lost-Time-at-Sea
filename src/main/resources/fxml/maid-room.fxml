                <MenuItem onAction="#switchToBar" styleClass="nav-button" mnemonicParsing="false" text="BARTENDER (BAR)" />
                <MenuItem onAction="#switchToDeck" styleClass="nav-button" mnemonicParsing="false" text="FIRST MATE (DECK)" />
              </items>
            </MenuButton>
          </children>
      </Pane>
            <Button layoutX="263.0" layoutY="552.0" mnemonicParsing="false" onAction="#switchToCrimeScene" styleClass="nav-button" text="CRIME SCENE" />
            <Button disable="true" layoutX="356.0" layoutY="552.0" mnemonicParsing="false" onAction="#switchToMaidRoom" styleClass="nav-button" text="BEDROOM" />
            <Button layoutX="432.0" layoutY="552.0" mnemonicParsing="false" onAction="#switchToBar" styleClass="nav-button" text="BAR" />
            <Button layoutX="473.0" layoutY="552.0" mnemonicParsing="false" onAction="#switchToDeck" styleClass="nav-button" text="DECK" />
            
      <!-- Container for the popup -->
      <Pane fx:id="popupContainer" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
      </Pane> 
   </children>
</AnchorPane>
