<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="room" focusTraversable="true" prefHeight="599.0" prefWidth="789.0" style="-fx-background-color: #dbd7cc;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.FloorController">
   <children>
      <Pane layoutY="-1.0">
          <children>
              <ImageView fitHeight="561.0" fitWidth="802.0" layoutY="72.0" preserveRatio="true">
                 <image>
                    <Image url="@../images/floorZoom.png" />
                 </image>
              </ImageView>
              
              <fx:include source="timer.fxml" />
            <Button fx:id="btnBack" layoutX="370.0" layoutY="577.0" mnemonicParsing="false" onAction="#onBackButtonAction" text="Go Back" />
            <ImageView fx:id="floorBoard" fitHeight="380.0" fitWidth="183.0" layoutX="301.0" layoutY="167.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/floorboard-removable.png" />
               </image>
            </ImageView>
            <Circle fx:id="screw1" fill="#b5b7b9" layoutX="324.0" layoutY="191.0" radius="12.0" stroke="BLACK" strokeType="INSIDE" />
            <Circle fx:id="screw2" fill="#b5b7b9" layoutX="324.0" layoutY="522.0" radius="12.0" stroke="BLACK" strokeType="INSIDE" />
            <Circle fx:id="screw3" fill="#b5b7b9" layoutX="457.0" layoutY="522.0" radius="12.0" stroke="BLACK" strokeType="INSIDE" />
          </children>
      </Pane>
      <!-- Container for the popup -->
      <Pane fx:id="popupContainer" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
      </Pane>
      <!-- Container for the chat -->
      <VBox fx:id="chatContainer" layoutX="10" layoutY="440" prefHeight="150" prefWidth="280" visible="false">
          <fx:include fx:id="chat" source="chat.fxml" />
      </VBox> 
   </children>
</AnchorPane>
