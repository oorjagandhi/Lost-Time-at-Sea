<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>


<AnchorPane fx:id="room" focusTraversable="true" onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased" prefHeight="605.0" prefWidth="835.0" style="-fx-background-color: #dbd7cc;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.RoomController">
   <children>
      <Pane layoutY="-1.0">
          <children>
              <ImageView fitHeight="605.0" fitWidth="835.0" preserveRatio="false">
                 <image>
                    <Image url="@../images/deck.png" />
                 </image>
              </ImageView>
            <ImageView fx:id="suspectSailor" fitHeight="471.0" fitWidth="714.0" layoutX="136.0" layoutY="120.0" onMouseClicked="#handleSuspectClick" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/sailor.png" />
               </image>
            </ImageView>
              
              <Button fx:id="btnGuess" alignment="CENTER" layoutX="707.0" layoutY="46.0" mnemonicParsing="false" onAction="#handleGuessClick" onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" text="Make a Guess" textAlignment="CENTER" />
              
              <StackPane layoutY="10.0" prefWidth="835.0">
                  <fx:include source="timer.fxml" />
              </StackPane>
            <!-- Container for the chat -->
            <VBox fx:id="chatContainer" layoutX="79.0" layoutY="327.0" prefHeight="190.0" prefWidth="661.0" visible="false" />
            <ImageView fx:id="suspectIcon" fitHeight="150.0" fitWidth="148.0" layoutX="86.0" layoutY="316.0" pickOnBounds="true" preserveRatio="true" visible="false">
               <image>
                  <Image url="@../images/sailor_closeup1.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="156.0" fitWidth="158.0" layoutX="77.0" layoutY="313.0" pickOnBounds="true" preserveRatio="true" visible="false">
               <image>
                  <Image url="@../images/sailor_closeup.png" />
               </image>
            </ImageView>
            <Rectangle fx:id="rectSuspect" arcHeight="5.0" arcWidth="5.0" fill="#ffffff00" height="444.0" layoutX="163.0" layoutY="154.0" onMouseEntered="#handleMouseEnterrectSuspect" onMouseExited="#handleMouseExitrectSuspect" stroke="TRANSPARENT" strokeType="INSIDE" width="137.0" />
            <MenuButton layoutX="41.0" layoutY="65.0" mnemonicParsing="false" styleClass="nav-button" text="MOVE ROOMS">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#switchToCrimeScene" styleClass="nav-button" text="CRIME SCENE" />
                <MenuItem mnemonicParsing="false" onAction="#switchToMaidRoom" styleClass="nav-button" text="MAID (BEDROOM)" />
                <MenuItem mnemonicParsing="false" onAction="#switchToBar" styleClass="nav-button" text="BARTENDER (BAR)" />
                <MenuItem mnemonicParsing="false" onAction="#switchToDeck" styleClass="nav-button" text="FIRST MATE (DECK)" />
              </items>
            </MenuButton>
          </children>
      </Pane>
      <!-- Container for the popup -->
      <Pane fx:id="popupContainer" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
      </Pane> 
   </children>
</AnchorPane>
